@model Book
@{
    Layout = "_Layout";
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div  class="col-md-12">
        <div class="card">
            <form asp-area="Admin" asp-controller="Book" asp-action="Details" method="POST">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Book Details </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">
                        Book Details
                    </h6>
                    <div class="pl-lg-4">
                        @* Update was ok *@
                        @if (!string.IsNullOrWhiteSpace(TempData["StatusMessage"] as string))
                        {
                            <!-- everything went ok -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div role="alert" class="alert alert-success alert-dismissible fade show">
                                        @TempData["StatusMessage"]
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        @* Update has errors *@
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                        {
                            <!-- errors -->
                            @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div role="alert" class="alert alert-warning alert-dismissible fade show">
                                            <span>@error.ErrorMessage</span>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        <div class="row">
                            @Html.AntiForgeryToken()
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @* <label class="form-control-label" for="input-Name">Name</label> *@
                                    @* <input asp-for="Name" type="text" id="input-Name" class="form-control" placeholder="Name" > *@
                                </div>
                            </div>
                            @Html.HiddenFor(o => o.Id)
                            @Html.HiddenFor(o => o.CreationDate)
                        </div>

                    </div>
                    @* <hr class="my-4"/> *@
                    @* <!-- Books --> *@
                    @* <h6 class="heading-small text-muted mb-4">Books</h6> *@
                    @* <div class="pl-lg-4"> *@
                    @*     <div class="row"> *@
                    @*         <div class="col-md-12"> *@
                    @*         todo add book list *@
                    @*         </div> *@
                    @*     </div> *@
                    @* </div> *@
                    <hr class="my-4"/>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            @if (!ViewBag.IsDetail)
                            {
                            <input type="submit" class="btn btn-md btn-primary" value="Save">
                                
                            
                            }
                            else
                            {
                                <a href="@Url.Action("Edit", "Book",new { area = "Admin" })/@Model.Id" class="btn btn-md btn-secondary">
                                    Edit Details
                                </a>
                            }
                            <a href="@Url.Action("Index", "Book",new { area = "Admin" })" class="btn btn-md btn-secondary">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div></div >
</div>
@section Scripts
{
    <script>
    $(document).ready(function (){
            if("@ViewBag.IsDetail" === "True")
                $("input").prop("readonly",true);     
            $("#btn-new").prop("hidden",true);
        });
    </script>
}
